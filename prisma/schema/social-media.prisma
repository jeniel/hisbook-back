model FacebookPage {
    id                String   @id @default(uuid())
    fbId              String?  @unique @map("fb_id")
    name              String?  @map("name")
    about             String?  @map("about")
    accessToken       String?  @map("access_token")
    category          String?  @map("category")
    fanCount          Int?     @map("fan_count")
    followersCount    Int?     @map("followers_count")
    overallStarRating Float?   @map("overall_star_rating")
    link              String?  @map("link")
    website           String?  @map("website")
    username          String?  @map("username")
    engagementCount   Int?     @map("engagement_count")
    engagementMessage String?  @map("engagement_message")
    imageUrl          String?  @map("image_url")
    createdAt         DateTime @default(now()) @map("created_at")
    updatedAt         DateTime @updatedAt @map("updated_at")

    facebookPagePost FacebookPagePost[]

    @@map("facebook_page") // Maps to the actual table name in the database
    @@schema("marketing")
}

model FacebookPagePost {
    id          String       @id @default(uuid())
    message     String?
    createdTime DateTime?    @map("created_time ")
    createdAt   DateTime     @default(now()) @map("created_at")
    updatedAt   DateTime     @updatedAt @map("updated_at")
    pageId      String       @map("page_id")
    page        FacebookPage @relation(fields: [pageId], references: [id])

    @@map("facebook_page_post") // Maps to the actual table name in the database
    @@schema("marketing")
}
