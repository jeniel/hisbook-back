model keywords {
  id       String  @id @default(dbgenerated("uuid_generate_v4()")) @db.Uuid
  keyword  String
  count    Int?    @default(1)
  tenantId String? @map("tenant_id")
  tenant   Tenant? @relation(fields: [tenantId], references: [id])

  @@unique([keyword, tenantId], map: "keywords_unique_per_tenant")
  @@index([tenantId])
  @@schema("agent")
}

model keyword_daily {
  id       String    @id @default(dbgenerated("uuid_generate_v4()")) @db.Uuid
  keyword  String
  count    Int?      @default(1)
  date     DateTime? @default(dbgenerated("CURRENT_DATE")) @db.Date
  tenantId String?   @map("tenant_id")
  tenant   Tenant?   @relation(fields: [tenantId], references: [id])

  @@unique([keyword, date, tenantId], map: "keyword_daily_unique_per_day")
  @@index([tenantId])
  @@schema("agent")
}
